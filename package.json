{
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "tscheck:web": "tsc -p apps/web/tsconfig.json --noEmit",
    "tscheck:packages-core": "tsc -p packages/core/tsconfig.json --noEmit",
    "tscheck:native": "tsc -p apps/native/tsconfig.json --noEmit",
    "eslint-check:web": "cd apps/web && eslint 'src/**/*.[jt]s?(x)' --fix --cache",
    "eslint-check:native": "cd apps/native && eslint 'src/**/*.[jt]s?(x)' --fix --cache",
    "eslint-check:packages-core": "cd packages/core && eslint 'src/**/*.[jt]s?(x)' --fix --cache"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "^2.0.5",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "eslint": "8.41.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "stylelint": "^16.5.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "with-react-native-web",
  "packageManager": "pnpm@8.8.0"
}
